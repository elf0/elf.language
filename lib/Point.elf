Point<T>{
  $new(x: T, y: T){
    .x = x
    .y = y
  }

  $->(x: T, y: T){
    x = .x
    y = .y
  }

  $(x: T, y: T){
    .x = x
    .y = y
  }

  X: $->T{
    return .x
  }

  Y: $->T{
    return .y
  }

  X: $T{
    .x = value
  }

  Y: $T{
    .y = value
  }

  OffsetX: $T{
    .x += value
  }

  OffsetY: $T{
    .y += value
  }

  Offset: $(x: T, y: T){
    .x += x
    .y += y
  }

private:
  x: T
  y: T
}

