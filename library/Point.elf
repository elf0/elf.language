Point<T>{
  new(x: T, y: T){
    .x = x
    .y = y
  }

  set(x: T, y: T){
    .x = x
    .y = y
  }

  get X: T{
    return .x
  }

  get Y: T{
    return .y
  }

  set X: T{
    .x = value
  }

  set Y: T{
    .y = value
  }

  set OffsetX: T{
    .x += value
  }

  set OffsetY: T{
    .y += value
  }

  set Offset: (x: T, y: T){
    .x += x
    .y += y
  }

private:
  x: T
  y: T
}

